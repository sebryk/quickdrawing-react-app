{
   "compilerOptions": {
      "target": "ES2020",
      "forceConsistentCasingInFileNames": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "allowJs": false,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "ESNext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx",
      "incremental": true,
      "baseUrl": ".",
      "paths": {
         "@/*": ["src/*"],
         "@components/*": ["src/components/*"],
         "@hooks/*": ["src/hooks/*"]
      },
      "plugins": [
         {
            "name": "next"
         }
      ]
   },
   "include": [
      "next-env.d.ts",
      ".next/types/**/*.ts",
      "src/app",
      "src",
      "**/*.ts",
      "**/*.tsx",
      ".next/dev/types/**/*.ts"
   ],
   "exclude": ["node_modules"]
}
